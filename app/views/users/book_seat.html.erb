<div class="authform">
<h2>Book New Seat</h1>
	<% @user.errors.each do |attr, msg| %>
  <li style="color: red">
    <%= @user.errors.full_messages_for(attr).first if @user.errors[attr].first == msg %>
  </li>
<% end %>
 <%= form_for(current_user, :url => '/assign_seat', :html => { :method => :put, :role => 'form'}) do |form| %>
    

    <div class="form-group">
      <%= form.label :name %>
      <%= select_tag :seat_id, options_from_collection_for_select(@seats, "id", "name"), class: 'form-control' %>
    </div>
    <div class="form-group">
    	<%= form.label :from %>
    	<%= date_field_tag 'seat_from_date', params[:seat_from_date] || Date.today, class: 'form-control select_input'%>
	</div>
	<div class="form-group">
    	<%= form.label :to %>
    	<%= date_field_tag 'seat_end_date', params[:seat_end_date] || Date.today, class: 'form-control'%>
	</div>

    <div class="form-group">
      <%= form.submit "Submit", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

<%= link_to 'Back', users_path %>
</h2>

